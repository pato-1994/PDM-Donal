<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal de la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Estilo personalizado para la ActionBar -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">#3F51B5</item> <!-- Cambiar a cualquier color -->
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <!-- Estilo para el texto del título de la ActionBar -->
    <style name="ActionBarTitleText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Theme.Practica1." parent="AppTheme" />
</resources>